<div class="login-container">
  <div class="login-card">
    <h2>Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <label>Email</label>
        <div class="input-container">
          <i class="fas fa-envelope icon"></i>
          <%= f.email_field :email, autofocus: true, class: 'input-field' %>
        </div>
      </div>

      <div class="form-group">
        <label>Password</label>
        <div class="input-container">
          <i class="fas fa-lock icon"></i>
          <%= f.password_field :password, autocomplete: "off", class: 'input-field', id: 'password' %>
        </div>
      </div>

      <div class="form-group">
        <label>Confirmed Password</label>
        <div class="input-container">
          <i class="fas fa-lock icon"></i>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'input-field', id: 'cpassword' %>
        </div>
      </div>

      <div class="form-actions">
        <%= f.submit "Sign up", class: 'login-button' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
</div>
